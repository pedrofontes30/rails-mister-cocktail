<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <link rel="stylesheet" href="node_modules/select2/dist/css/select2.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon border-bottom px-5">
      <%= link_to cocktails_path, class: "navbar-brand" do %>
        <%= image_tag "https://image.flaticon.com/icons/png/512/38/38706.png" %>
      <% end %>
      <button type="button" class="btn btn-outline-secondary">
        <%= link_to 'Create cocktail', new_cocktail_path %>
      </button>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
